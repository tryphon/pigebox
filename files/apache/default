<VirtualHost *:80>
	ServerAdmin webmaster@localhost

  DocumentRoot /usr/share/pige/public
  PassengerDefaultUser www-data
  PassengerMaxPoolSize 3
  PassengerMaxRequests 10000
  PassengerLogLevel 3
  <Directory /usr/share/pige/public>
     AllowOverride None
     Order allow,deny
     Allow from all
  </Directory>
	
	Alias /records /srv/pige/records
	<Directory /var/www/pige>
		Options Indexes FollowSymLinks MultiViews
		AllowOverride None
		Order allow,deny
		Allow from all
	</Directory>

	ScriptAlias /cgi-bin/ /usr/lib/cgi-bin/
	<Directory "/usr/lib/cgi-bin">
		AllowOverride None
		Options +ExecCGI -MultiViews +SymLinksIfOwnerMatch
		Order allow,deny
		Allow from all
	</Directory>

  LogLevel warn

  # Use only syslog
  ErrorLog syslog
  CustomLog "|/usr/bin/logger -p local1.info -t apache2/access" combined
</VirtualHost>
